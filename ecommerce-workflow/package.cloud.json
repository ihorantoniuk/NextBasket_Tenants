{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "AI-Powered E-commerce Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "postinstall": "npm run build",
    "docker:build": "docker build -t ecommerce-api .",
    "docker:run": "docker run -p 3000:3000 ecommerce-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "axios": "^1.4.0",
    "uuid": "^9.0.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "pg": "^8.11.0",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.5",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@types/pg": "^8.10.0",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.45.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ecommerce",
    "ai",
    "upselling",
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "NEXT BASKET Assessment",
  "license": "ISC"
}
